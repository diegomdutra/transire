@{
    ViewBag.Title = "Home Store";
}

<div class="container m-4">
    <div class="row">

        <div class="col-lg-3">
            <h1 class="my-4">Categorias</h1>
            <div class="nav flex-column nav-pills">
                @foreach (var item in ViewBag.Categories)
                {
                    string name = item.cat_name;
                    int id = item.cat_id;
                    @Html.ActionLink(name, "Index", new { id = id }, new { @class = "nav-link" })
                }
            </div>
        </div>

        @foreach (var item in ViewBag.Products)
        {
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="@item.prod_img_path" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#">@item.prod_name</a>
                            </h4>
                            <h5>R$ @item.prod_price</h5>
                            <p class="card-text">@item.prod_description</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        }
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
